@model Artemis_Issue_Tracker.Models.Task

@{
    ViewData["Title"] = "Create";
}

<div class="modal fade" id="myModal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="exampleModalLabel">Create New Task</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <div class="createTaskForm">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="name" class="control-label">Name</label>
                        <input asp-for="name" class="form-control" data-field="name" />
                        <span asp-validation-for="name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="project_id" class="control-label">Project ID</label>
                        <input asp-for="project_id" class="form-control" data-field="project_id" />
                        <span asp-validation-for="project_id" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="parent_id" class="control-label">Parent ID</label>
                        <input asp-for="parent_id" class="form-control" data-field="parent_id" />
                        <span asp-validation-for="parent_id" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="description" class="control-label">Description</label>
                        <input asp-for="description" class="form-control" data-field="description" />
                        <span asp-validation-for="description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="priority" class="control-label">Priority</label>
                        <input asp-for="priority" class="form-control" data-field="priority" />
                        <span asp-validation-for="priority" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="status" class="control-label">Status</label>
                        <input asp-for="status" class="form-control" data-field="status" />
                        <span asp-validation-for="status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="type" class="control-label">Type</label>
                        <input asp-for="type" class="form-control" data-field="type" />
                        <span asp-validation-for="type" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="position" class="control-label">Position</label>
                        <input asp-for="position" class="form-control" data-field="position" />
                        <span asp-validation-for="position" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="progress" class="control-label">Progress</label>
                        <input asp-for="progress" class="form-control" data-field="progress" />
                        <span asp-validation-for="progress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="time_estimate" class="control-label">Estimate</label>
                        <input asp-for="time_estimate" class="form-control" data-field="time_estimate" />
                        <span asp-validation-for="time_estimate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="time_log" class="control-label">Time Tracking</label>
                        <input asp-for="time_log" class="form-control" data-field="time_log" />
                        <span asp-validation-for="time_log" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="start" class="control-label">Start</label>
                        <input asp-for="start" class="form-control" data-field="start" />
                        <span asp-validation-for="start" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="end" class="control-label">End</label>
                        <input asp-for="end" class="form-control" data-field="end" />
                        <span asp-validation-for="end" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="created" class="control-label">Creation Date</label>
                        <input asp-for="created" class="form-control" data-field="created" />
                        <span asp-validation-for="created" class="text-danger"></span>
                    </div>
                    @Html.AntiForgeryToken()
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary saveTaskButton">Save</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
