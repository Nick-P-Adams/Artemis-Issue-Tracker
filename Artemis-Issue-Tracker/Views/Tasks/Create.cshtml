@model Artemis_Issue_Tracker.Models.Task

@{
    ViewData["Title"] = "Create";
}

<div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
        <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Create New Task</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="name" class="control-label text-light">Name</label>
                            <input asp-for="name" class="form-control" />
                            <span asp-validation-for="name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="project_id" class="control-label text-light">Project ID</label>
                            <input asp-for="project_id" class="form-control" />
                            <span asp-validation-for="project_id" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="parent_id" class="control-label text-light">Parent ID</label>
                            <input asp-for="parent_id" class="form-control" />
                            <span asp-validation-for="parent_id" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="description" class="control-label text-light">Description</label>
                            <input asp-for="description" class="form-control" />
                            <span asp-validation-for="description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="priority" class="control-label text-light">Priority</label>
                            <input asp-for="priority" class="form-control" />
                            <span asp-validation-for="priority" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="status" class="control-label text-light">Status</label>
                            <input asp-for="status" class="form-control" />
                            <span asp-validation-for="status" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="type" class="control-label text-light">Type</label>
                            <input asp-for="type" class="form-control" />
                            <span asp-validation-for="type" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="position" class="control-label text-light">Position</label>
                            <input asp-for="position" class="form-control" />
                            <span asp-validation-for="position" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="progress" class="control-label text-light">Progress</label>
                            <input asp-for="progress" class="form-control" />
                            <span asp-validation-for="progress" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="time_estimate" class="control-label text-light">Estimate</label>
                            <input asp-for="time_estimate" class="form-control" />
                            <span asp-validation-for="time_estimate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="time_log" class="control-label text-light">Time Tracking</label>
                            <input asp-for="time_log" class="form-control" />
                            <span asp-validation-for="time_log" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="start" class="control-label text-light">Start</label>
                            <input asp-for="start" class="form-control" />
                            <span asp-validation-for="start" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="end" class="control-label text-light">End</label>
                            <input asp-for="end" class="form-control" />
                            <span asp-validation-for="end" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="created" class="control-label text-light">Creation Date</label>
                            <input asp-for="created" class="form-control" />
                            <span asp-validation-for="created" class="text-danger"></span>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Save</button>>
                        </div>
                    </form>
                </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
