@model Artemis_Issue_Tracker.Models.Project

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label>Name</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            <label>Description</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            <label>Sprint Length (Days)</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SprintLength)
        </dd>
        <dt class = "col-sm-2">
            <label>Sprint Count Estimate</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SprintCount)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
