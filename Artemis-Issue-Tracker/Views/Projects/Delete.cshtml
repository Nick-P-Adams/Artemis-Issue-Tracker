@model Artemis_Issue_Tracker.Models.Project

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label>Name</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            <label>Description</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            <label>Sprint Length (Days)</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SprintLength)
        </dd>
        <dt class = "col-sm-2">
            <label>Sprint Count Estimate</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SprintCount)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
